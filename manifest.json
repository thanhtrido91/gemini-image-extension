{
  "manifest_version": 3,
  "name": "Gemini Image Designer",
  "version": "1.0",
  "description": "Crop an image region and generate a design via Gemini AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
